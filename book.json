    	    "copyButtons": true
    	},
    	"github": {
            "url": "https://github.com/ledge-lang/ledge-lang.github.io"
    	},
    	"tbfed-pagefooter": {
            "copyright":"Copyright &copy LeslieZhu 2022",
            "modify_label": "该文件修订时间：",
