{
    "root": "./",
    "author": "Leslie Zhu",
    "language": "zh-hans",
    "structure": {
	"readme": "README.md",
	"summary": "SUMMARY.md",
	"glossary": "GLOSSARY.md"
    },
    "links":{
        "sidebar":{
            "Home": "https://ledge-lang.github.io/",
            "GitHub": "https://github.com/ledge-lang/ledge-lang.github.io/"
        }
